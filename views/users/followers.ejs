<%- include('../partials/_navbar') %>

<div class="container" style="padding-bottom: 5rem;">
  <h2><%= user.username %>'s Followers</h2>

  <% if (!user.followers || user.followers.length === 0) { %>
    <p>This user has no followers yet.</p>
  <% } else { %>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 1rem;">
      <% user.followers.forEach(follower => { %>
        <a 
          href="/users/<%= follower._id %>" 
          style="text-decoration: none; color: inherit;"
        >
          <div style="border: 1px solid #ccc; padding: 1rem; border-radius: 8px; text-align: center;">
            <% if (follower.profilePicture) { %>
              <img 
                src="<%= follower.profilePicture %>" 
                alt="Profile Picture"
                style="width: 70px; height: 70px; border-radius: 50%; object-fit: cover; margin-bottom: 0.5rem;"
              />
            <% } else { %>
              <div style="width: 70px; height: 70px; border-radius: 50%; background: #eee; margin: 0 auto 0.5rem auto; display: flex; align-items: center; justify-content: center; font-size: 0.8rem;">
                No Photo
              </div>
            <% } %>

            <strong><%= follower.username %></strong>
          </div>
        </a>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('../partials/_bottomnav') %>
