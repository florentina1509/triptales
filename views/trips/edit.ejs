<h1>Edit Trip</h1>

<form action="/trips/<%= trip._id %>?_method=PUT" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= trip.title %>" required>

  <label for="location">Location:</label>
  <input type="text" name="location" value="<%= trip.location %>" required>

  <label for="description">Description:</label>
  <textarea name="description"><%= trip.description %></textarea>

  <label for="date">Date:</label>
  <input type="date" name="date" value="<%= trip.date ? trip.date.toISOString().split('T')[0] : '' %>">

  <button type="submit">Update Trip</button>
</form>

<a href="/trips/<%= trip._id %>">Back to Trip</a>
