<%- include('../partials/_navbar') %>

<div class="container">
  <h1>Edit Trip</h1>

  <form 
    action="/trips/<%= trip._id %>?_method=PUT" 
    method="POST" 
    enctype="multipart/form-data"
  >
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= trip.title %>" required />

    <label for="location">Location:</label>
    <input type="text" name="location" id="location" value="<%= trip.location %>" required />

    <label for="description">Description:</label>
    <textarea name="description" id="description"><%= trip.description %></textarea>

    <label for="date">Date:</label>
    <input 
      type="date" 
      name="date" 
      id="date" 
      value="<%= trip.date ? trip.date.toISOString().split('T')[0] : '' %>"
    />

    <label for="media">Update Media:</label>
    <input 
      type="file" 
      name="media" 
      id="media" 
      accept="image/*,video/*" 
      multiple 
    />

    <button type="submit" style="margin-top: 1rem;">Update Trip</button>
  </form>

  <p style="margin-top: 1rem;">
    <a href="/trips/<%= trip._id %>">‚Üê Back to Trip</a>
  </p>
</div>

