<nav style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; background: #2c3e50;">
  <div>
    <a href="/" style="color: white; text-decoration: none;">Home</a>
  </div>

  <% if (!currentUser) { %>
    <div>
      <a href="/auth/sign-up" style="color: white; margin-left: 1rem;">Sign Up</a>
      <a href="/auth/login" style="color: white; margin-left: 1rem;">Log In</a>
    </div>
  <% } else { %>
    <div>
      <span style="color: #fff; margin-right: 1rem;">Hi, <%= currentUser.username %></span>
      <a href="/profile" style="color: white; margin-right: 1rem;">Profile</a>
      <a href="/auth/logout" style="color: white;">Log Out</a>
    </div>
  <% } %>
</nav>
