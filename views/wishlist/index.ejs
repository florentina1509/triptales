<%- include('../partials/_navbar') %>

<div class="container" style="padding-bottom: 6rem;">
  <h1>Your Wishlist</h1>

  <form action="/wishlist" method="POST" style="margin-bottom: 2rem;">
  <div style="display: flex; flex-direction: column; align-items: flex-start; gap: 0.5rem;">
    <input 
      type="text" 
      name="destination" 
      placeholder="Add a destination" 
      required 
      style="padding: 0.5rem; width: 100%; max-width: 400px;"
    />
    <button type="submit" style="padding: 0.5rem 1.2rem;">Add</button>
  </div>
</form>


  <% if (wishlist.length === 0) { %>
    <p>Your wishlist is empty.</p>
  <% } else { %>
    <div style="display: flex; flex-direction: column; gap: 1rem;">
      <% wishlist.forEach((item, index) => { %>
        <div 
          style="border: 1px solid #ccc; border-radius: 8px; padding: 1rem; background: #fff; display: flex; justify-content: space-between; align-items: center;"
        >
          <strong><%= item %></strong>
          <form 
            action="/wishlist/<%= index %>?_method=DELETE" 
            method="POST" 
            style="margin: 0;"
            onsubmit="return confirm('Are you sure you want to remove this destination?');"
          >
            <button type="submit" style="padding: 0.3rem 0.8rem;">Remove</button>
          </form>
        </div>
      <% }) %>
    </div>
  <% } %>

  <a href="/" style="display: inline-block; margin-top: 2rem;">Back to Home</a>
</div>

<%- include('../partials/_bottomnav') %>
